<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backItem"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        app:cardElevation="1dp"
        android:layout_margin="20dp"

        app:cardCornerRadius="5dp"
        android:id="@+id/otkazibYuborish"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.05"
        app:cardBackgroundColor="@color/material_on_surface_stroke"
        android:layout_height="0dp">



<FrameLayout
    android:background="@color/material_on_surface_stroke"
    android:id="@+id/clickItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_margin="2dp"
        android:background="@color/material_on_surface_stroke"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/text_otkazbYuborish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="7dp" />


</FrameLayout>




    </androidx.cardview.widget.CardView>



<TextView
    android:id="@+id/text_theme"
    android:textSize="25sp"
    android:textColor="@color/black"
    android:textStyle="normal"
    android:text="Mavzu"
   app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/text_about"
        android:textAlignment="textStart"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Mavzu haqida"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_theme"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>